<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trl_name"
        android:id="@+id/trl_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trl_type"
        android:id="@+id/trl_type"
        android:layout_below="@+id/trl_site"
        android:layout_alignLeft="@+id/trl_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trl_site"
        android:id="@+id/trl_site"
        android:layout_below="@+id/trl_name"
        android:layout_alignLeft="@+id/trl_name"
        android:layout_alignStart="@+id/trl_name" />

</RelativeLayout>